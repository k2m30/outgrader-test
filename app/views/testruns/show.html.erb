<%- model_class = Testrun -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @testrun.status %></dd>
  <dt><strong><%= model_class.human_attribute_name(:passed) %>:</strong></dt>
  <dd><%= @testrun.passed %></dd>
  <dt><strong><%= model_class.human_attribute_name(:failed) %>:</strong></dt>
  <dd><%= @testrun.failed %></dd>
  <dt><strong><%= model_class.human_attribute_name(:total) %>:</strong></dt>
  <dd><%= @testrun.total %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              testruns_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_testrun_path(@testrun), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              testrun_path(@testrun),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
